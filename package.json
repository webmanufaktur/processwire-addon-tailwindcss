{
  "name": "processwire-addon-tailwindcss",
  "version": "1.0.0",
  "description": "All necessary files for TailwindCSS in ProcessWire CMS/CMF.",
  "main": "tailwind.config.js",
  "scripts": {
    "watch": "npm-run-all watch:*",
    "build": "npm-run-all build:*",
    "watch:tailwind": "npx tailwindcss -i site/templates/src/tailwind.css -c tailwind.config.js -o site/templates/styles/tailwind.css --watch",
    "build:tailwind": "npx tailwindcss -i site/templates/src/tailwind.css -c tailwind.config.js -o site/templates/styles/tailwind.css --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webmanufaktur/processwire-addon-tailwindcss.git"
  },
  "keywords": [
    "Processwire",
    "ProcessWire CMS",
    "ProcessWire CMF",
    "TailwindCSS"
  ],
  "author": "Alexander Abelt",
  "license": "GPL2",
  "bugs": {
    "url": "https://github.com/webmanufaktur/processwire-addon-tailwindcss/issues"
  },
  "homepage": "https://github.com/webmanufaktur/processwire-addon-tailwindcss#readme",
  "dependencies": {
    "@tailwindcss/typography": "^0.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.1.4",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0"
  },
  "devDependencies": {}
}
